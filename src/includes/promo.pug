mixin promo(btnFirstTitle, btnSecondTitle)
  section#promo
    .container
      .promo__wrapper
        .promo-content
          if (lang === 'en')
            span.ui-title-1 WCMS - Simle CMS
            span.ui-title-4 Best solution for landing page
          else
            span.ui-title-1 WCMS - Простая CMS
            span.ui-title-4 Лучшее решение для лендинг-пейдж
          // Buttons
          .button-list
            +buttonLink('GitHub', 'https://github.com/vedees/wcms', '_blank')(class="button-default" class="button--big")
            if (lang === 'en')
              +buttonLink('Download', 'https://vedees.ru/wex/wcms.zip')(class="button-primary" class="button--big")
            else
              +buttonLink('Скачать', 'https://vedees.ru/wex/wcms.zip')(class="button-primary" class="button--big")
        block