//! Service
.service-title__descr
  max-width 60%
  margin-bottom rem(40)
  @media screen and (max-width smDesktopWidth)
    max-width unset

.service-list
  display flex
  justify-content space-between
  align-items flex-start
  flex-wrap: wrap
  margin rem(30) 0
.service-item
  width 32%
  @media screen and (max-width smDesktopWidth)
    width 100%
    margin-bottom rem(40)
    &:last-child
      margin-bottom 0

// title
.title-service
  margin-bottom: rem(20)
  &:before
    display: block
    width: 66px
    height: 66px
    margin-bottom: rem(18)
