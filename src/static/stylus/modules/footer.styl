 footer
  padding-bottom: rem(26)
  padding-top: rem(140)
  background-color: #0e141a
  .ui-title-1, .ui-title-2, .ui-title-3, .ui-title-4, span, a
    color: #ffffff
  .ui-title-3
    margin-right rem(30)
    @media screen and (max-width smDesktopWidth)
      margin-right 0
      margin-bottom rem(30)

.footer__wrapper
  display: flex
  flex-wrap: wrap
  align-items center
  justify-content space-evenly
  max-width 740px
  margin-bottom rem(60)
  @media screen and (max-width smDesktopWidth)
    text-align center
    max-width unset
    justify-content center
    flex-direction column

.footer-nav
  @media screen and (max-width smDesktopWidth)
    min-width 30%
    margin-bottom rem(30)
  span
    font-size rem(22)
    margin-bottom 18px
  li
    margin-bottom 8px

.footer-copyright
  text-align center

