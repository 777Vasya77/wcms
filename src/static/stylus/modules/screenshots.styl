//! IMG SCREEN
.slider__content
  display flex
  flex-direction column
  justify-content center
  align-items center
  min-height: 40vh
  @media screen and (max-width smDesktopWidth)
    min-height: unset

.slide-title
  display block
  font-size rem(20)
  margin-bottom rem(14)
  &:last-child
    margin-bottom 0

// shots
.screenshots__wrapper
  display flex
  align-items center
  position relative
  margin-bottom screenshotsMarginBottom
// code
.code
  img
    width auto
    max-height: 560px
// dash
.dashboard
  img
    width auto
    max-height: 780px
// code & dash
#zoom-background--black,
#zoom-background--white,
.no-zoom-background
  box-shadow 0 rem(20) rem(20) rgba(0,0,0,.09)
  transition: mainTransition
  @media screen and (max-width phoneWidth)
    box-shadow 0 rem(10) rem(10) rgba(0,0,0,.09)
  &:hover
    box-shadow: 0 rem(40) rem(40) rgba(0,0,0,.14)
    transform: translate(0,-10px)
    transition-delay: 0s!important
    @media screen and (max-width phoneWidth)
      box-shadow: 0 rem(20) rem(20) rgba(0,0,0,.14)
      transform: translate(0,-6px)

// nav screen
.screen-arrow
  position absolute
  pointer-events none
  @media screen and (max-width smDesktopWidth)
    display none

#screenshots-text
  .screen-arrow
    &:nth-of-type(1)
      width: 41%
      top: 13.8%
      left: 27.3%
      transform: rotate(31.9deg)
    &:nth-of-type(2)
      width: 39%
      top: 64.8%
      left: 30.3%
      transform: rotate(20.6deg)
#screenshots-img
  .screen-arrow
    &:nth-of-type(1)
      width: 41%
      top: 13.8%
      left: 27.3%
      transform: rotate(30.9deg)
    &:nth-of-type(2)
      width: 30%;
      top: 49.8%;
      left: 34.3%;
      transform: rotate(191.6deg)
#screenshots-jscss
  .screen-arrow
    &:nth-of-type(1)
      width: 39%
      top: 10.8%
      left: 27.3%
      transform: rotate(18.9deg)
    &:nth-of-type(2)
      width: 39%
      top: 59.8%
      left: 26.3%
      transform: rotate(188.6deg)

// Info
.screenshots-info
  position absolute
  bottom: screenshotsMarginBottom - 170%
  left: 50%
  transform: translateX(-50%)
  color: infoColor